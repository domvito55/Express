<% include partials/header.ejs %>
<main>
    <form action="mailto:mferre39@my.centennialcollege.ca" method="post">
        <fieldset>
            <legend>Personal Info</legend>
            <p>
                <label for="firstName">First Name: &nbsp;</label>
                <input type="text" name="firstName" id="firstName"  tabindex="5"/>
            </p>
            <p>
                <label for="lastName">Last Name: &nbsp;</label>
                <input type="text" name="lastName" id="lastName"  tabindex="10"/>
            </p>
            <p>
                <label for="phone">Telephone Number: &nbsp;</label>
                <input type="text" name="phone" id="phone"  tabindex="15"/>
            </p>
            <p>
                <label for="email">Best e-mail: &nbsp;</label>
                <input type="text" name="email" id="email"  tabindex="20"/>
            </p>
        </fieldset>
        <fieldset>
            <legend>Property Info</legend>
            <p class="radioButton">
                <label for="typeOfProperty">Type of property: &nbsp;</label>
                <span>
                    <input type="radio" name="typeOfProperty" value="house"  tabindex="25"/>House &nbsp;
                    <input type="radio" name="typeOfProperty" value="condominium"  tabindex="30"/>Condominium &nbsp;
                    <input type="radio" name="typeOfProperty" value="Other"  tabindex="35"/>Other
                </span>
            </p>
            <p class="spin">
                <label for="bedrooms">Number of bedrooms : &nbsp;</label>
                <input type="number"  name="bedrooms"  id="bedrooms" min="0" max="30" value="1"  tabindex="40"> 
            </p>
            <p class="spin">
                <label for="bathrooms">Number of bathrooms: &nbsp;</label>
                <input type="number"  name="bathrooms"  id="bathrooms" min="0" max="30" value="1"  tabindex="45"> 
            </p>
            <p class="price">
                <label for="bedrooms">Minimum price : &nbsp;</label>
                <input type="number"  name="bedrooms"  id="bedrooms" min="0" max="9999999" value="1"  tabindex="50"> 
            </p>
            <p class="price">
                <label for="bathrooms">Maximum price: &nbsp;</label>
                <input type="number"  name="bathrooms"  id="bathrooms" min="0" max="9999999" value="1"  tabindex="55"> 
            </p>
        </fieldset>
        <fieldset>
            <legend>Any other comments</legend>
            <textarea id="txtOther" name="txtOther" rows="5" tabindex="60"
            placeholder="There is any other thing that you want to let us know?"
            style="width: 100%;"></textarea>
        </fieldset>
        <p>
            <input name="btnSubmit" tabindex="35" type="submit" value="Submit" class="button">
            <input name="btnReset" tabindex="37" type="reset" value="Clear Form" class="button">
        </p>
    </form>
</main>
